<h1>admin <%= @partner.name%> information</h1>
<%= link_to "Go back to #{@partner.name} admin page", admin_partner_path(@partner),:class => "btn btn-info"%>
<% @informations.each do |i|%>
  <ul>
    <li><%= i.company%></li>
    <li><%= i.address%></li> 
    <li><%= i.open_time%> ~ <%= i.close_time%>  Every <%= i.open_day%></li>
  </ul>  
<%end%>


<%= form_for @information, :url => admin_informations_path(:partner_id => @partner.id), :method => :post do |f|%>
  <%= render :partial => 'form', :locals => { :f => f} %>
<%end%>