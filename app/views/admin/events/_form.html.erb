<div class="form-group">
  <%= f.label :project_id, "Project" %>
  <%= f.select :project_id, Project.all.map{ |x| [x.name, x.id]}, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :name, "name" %>
  <%= f.text_field :name, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :en_name, "en_name" %>
  <%= f.text_field :en_name, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :note, "note" %>
  <%= f.text_area :note, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :start_date, "start_date" %>
  <%= f.date_select :start_date, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :end_date, "end_date" %>
  <%= f.date_select :end_date, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :start_time, "start_time" %>
  <%= f.time_select :start_time, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :end_time, "end_time" %>
  <%= f.time_select :end_time, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :place, "place" %>
  <%= f.text_field :place, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :address, "address" %>
  <%= f.text_field :address, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :cost, "cost" %>
  <%= f.text_area :cost, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :notice, "notice" %>
  <%= f.text_area :notice, :class => "form-control" %>
</div>

<div class="form-group">
  <%=f.label :logo, "LOGO"%>
  <%=f.file_field :logo%>

  <% if @event.logo.exists? %>
    <%=image_tag(@event.logo.url(:thumb))%>
    <%= check_box_tag "destroy_logo", "1" %> 刪除檔案
  <% end %>
</div>

<%= f.submit "更新",:class => "btn btn-primary" %>